    <script>
        // –ò–≥—Ä–æ–≤—ã–µ –ø–µ—Ä–µ–º–µ–Ω–Ω—ã–µ
        let balance = 1000;
        let gamesPlayed = 0;
        let aiPersonality = "ü§ñ –•–æ–ª–æ–¥–Ω—ã–π –∞–ª–≥–æ—Ä–∏—Ç–º";
        let isSpinning = false;

        // –°–∏–º–≤–æ–ª—ã –¥–ª—è –∞–≤—Ç–æ–º–∞—Ç–∞
        const symbols = ["üçí", "üçã", "üîî", "‚≠ê", "7Ô∏è‚É£", "üíé", "üéØ", "üåà"];
        
        // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è
        function init() {
            updateDisplay();
            const personalities = [
                "ü§ñ –•–æ–ª–æ–¥–Ω—ã–π –∞–ª–≥–æ—Ä–∏—Ç–º", 
                "üîÆ –ú–∏—Å—Ç–∏—á–µ—Å–∫–∏–π –æ—Ä–∞–∫—É–ª", 
                "üé≠ –¢–∞–∏–Ω—Å—Ç–≤–µ–Ω–Ω—ã–π –Ω–µ–∑–Ω–∞–∫–æ–º–µ—Ü",
                "üëæ –ö–∏–±–µ—Ä-–ø—Ä–æ—Ä–æ–∫"
            ];
            aiPersonality = personalities[Math.floor(Math.random() * personalities.length)];
            document.getElementById('aiPerson').textContent = aiPersonality;
        }

        // –û–±–Ω–æ–≤–ª–µ–Ω–∏–µ –∏–Ω—Ç–µ—Ä—Ñ–µ–π—Å–∞
        function updateDisplay() {
            document.getElementById('balance').textContent = balance;
            document.getElementById('gamesPlayed').textContent = gamesPlayed;
            document.getElementById('luckLevel').textContent = Math.min(100, Math.max(0, Math.floor((balance - 1000) / 10 + 50))) + '%';
        }

        // –§—É–Ω–∫—Ü–∏—è –≤—Ä–∞—â–µ–Ω–∏—è —Å–ª–æ—Ç–æ–≤
        function spinSlots() {
            if (isSpinning) return;
            
            const betAmount = parseInt(document.getElementById('betAmount').value);
            if (isNaN(betAmount) || betAmount < 10 || betAmount > 1000) {
                showMessage("üö´ –°—Ç–∞–≤–∫–∞ –¥–æ–ª–∂–Ω–∞ –±—ã—Ç—å –æ—Ç 10 –¥–æ 1000!", "error");
                return;
            }
            
            if (betAmount > balance) {
                showMessage("üí∏ –ù–µ–¥–æ—Å—Ç–∞—Ç–æ—á–Ω–æ –Ω–µ–π—Ä–æ-–∫—Ä–µ–¥–∏—Ç–æ–≤!", "error");
                return;
            }

            isSpinning = true;
            document.getElementById('spinBtn').disabled = true;
            balance -= betAmount;
            gamesPlayed++;
            updateDisplay();

            // –ê–Ω–∏–º–∞—Ü–∏—è –≤—Ä–∞—â–µ–Ω–∏—è
            const reels = [document.getElementById('reel1'), document.getElementById('reel2'), document.getElementById('reel3')];
            
            reels.forEach(reel => {
                reel.classList.add('spinning');
                reel.textContent = "üåÄ";
            });

            showMessage("üé∞ –ù–ï–ô–†–û-–°–õ–û–¢–´ –ê–ö–¢–ò–í–ò–†–û–í–ê–ù–´...", "processing");

            // –†–µ–∑—É–ª—å—Ç–∞—Ç—ã –≤—Ä–∞—â–µ–Ω–∏—è
            setTimeout(() => {
                const results = [
                    symbols[Math.floor(Math.random() * symbols.length)],
                    symbols[Math.floor(Math.random() * symbols.length)],
                    symbols[Math.floor(Math.random() * symbols.length)]
                ];

                // –û—Å—Ç–∞–Ω–æ–≤–∫–∞ –±–∞—Ä–∞–±–∞–Ω–æ–≤ –ø–æ –æ—á–µ—Ä–µ–¥–∏
                reels.forEach((reel, index) => {
                    setTimeout(() => {
                        reel.classList.remove('spinning');
                        reel.textContent = results[index];
                    }, 500 * (index + 1));
                });

                // –ü—Ä–æ–≤–µ—Ä–∫–∞ –≤—ã–∏–≥—Ä—ã—à–∞
                setTimeout(() => checkWin(results, betAmount), 2000);
            }, 1000);
        }

        // –ü—Ä–æ–≤–µ—Ä–∫–∞ –≤—ã–∏–≥—Ä—ã—à–Ω–æ–π –∫–æ–º–±–∏–Ω–∞—Ü–∏–∏
        function checkWin(results, betAmount) {
            let winAmount = 0;
            let message = "";
            let messageType = "info";

            if (results[0] === results[1] && results[1] === results[2]) {
                // –î–∂–µ–∫–ø–æ—Ç
                winAmount = betAmount * 20;
                balance += winAmount;
                showJackpot();
                message = `üéâ –ù–ï–ô–†–û-–î–ñ–ï–ö–ü–û–¢! –í–´–ò–ì–†–´–®: ${winAmount} –Ω–µ–π—Ä–æ-–∫—Ä–µ–¥–∏—Ç–æ–≤!`;
                messageType = "win";
            } else if (results[0] === results[1] || results[1] === results[2] || results[0] === results[2]) {
                // –ß–∞—Å—Ç–∏—á–Ω–æ–µ —Å–æ–≤–ø–∞–¥–µ–Ω–∏–µ
                winAmount = betAmount * 3;
                balance += winAmount;
                message = `‚≠ê –°–û–í–ü–ê–î–ï–ù–ò–ï! –í–´–ò–ì–†–´–®: ${winAmount} –Ω–µ–π—Ä–æ-–∫—Ä–µ–¥–∏—Ç–æ–≤!`;
                messageType = "win";
            } else {
                message = "üå™Ô∏è –ù–ï–ô–†–û-–•–ê–û–°! –ü–æ–ø—Ä–æ–±—É–π—Ç–µ —Å–Ω–æ–≤–∞...";
                messageType = "lose";
            }

            showMessage(message, messageType);
            updateDisplay();
            isSpinning = false;
            document.getElementById('spinBtn').disabled = false;

            // –ü—Ä–æ–≤–µ—Ä–∫–∞ –∫–æ–Ω—Ü–∞ –∏–≥—Ä—ã
            if (balance <= 0) {
                setTimeout(() => {
                    showMessage("üí• –ù–ï–ô–†–û-–ë–ê–õ–ê–ù–° –ò–°–ß–ï–†–ü–ê–ù! –ò–ò —Ä–µ–∫–æ–º–µ–Ω–¥—É–µ—Ç –∏–∑—É—á–∞—Ç—å Python! üêç", "error");
                    document.getElementById('spinBtn').disabled = true;
                }, 1000);
            }
        }

        // –ü–æ–∫–∞–∑–∞—Ç—å —Å–æ–æ–±—â–µ–Ω–∏–µ
        function showMessage(text, type) {
            const messageElement = document.getElementById('aiMessage');
            messageElement.textContent = text;
            
            // –°–±—Ä–æ—Å –∫–ª–∞—Å—Å–æ–≤
            messageElement.className = 'message';
            if (type === 'win') {
                messageElement.style.color = '#00ff88';
            } else if (type === 'error') {
                messageElement.style.color = '#ff4444';
            } else if (type === 'processing') {
                messageElement.style.color = '#00ffff';
            } else {
                messageElement.style.color = '#00ff88';
            }
        }

        // –ê–Ω–∏–º–∞—Ü–∏—è –¥–∂–µ–∫–ø–æ—Ç–∞
        function showJackpot() {
            const jackpot = document.getElementById('jackpot');
            jackpot.style.display = 'block';
            setTimeout(() => {
                jackpot.style.display = 'none';
            }, 3000);
        }

        // –î—Ä—É–≥–∏–µ –∏–≥—Ä—ã
        function playCoinFlip() {
            showMessage("üåÄ –ê–ö–¢–ò–í–ò–†–£–Æ –ö–í–ê–ù–¢–û–í–´–ô –ì–ï–ù–ï–†–ê–¢–û–†...", "processing");
            setTimeout(() => {
                const win = Math.random() > 0.48; // –ù–µ–±–æ–ª—å—à–æ–µ –ø—Ä–µ–∏–º—É—â–µ—Å—Ç–≤–æ –∫–∞–∑–∏–Ω–æ
                if (win) {
                    const winAmount = 50;
                    balance += winAmount;
                    showMessage(`üåà –í–´ –í –†–ï–ó–û–ù–ê–ù–°–ï –° –í–°–ï–õ–ï–ù–ù–û–ô! +${winAmount} –Ω–µ–π—Ä–æ-–∫—Ä–µ–¥–∏—Ç–æ–≤!`, "win");
                } else {
                    const loseAmount = 50;
                    balance -= loseAmount;
                    showMessage(`üå™Ô∏è –ö–í–ê–ù–¢–û–í–ê–Ø –ù–ï–û–ü–†–ï–î–ï–õ–ï–ù–ù–û–°–¢–¨! -${loseAmount} –Ω–µ–π—Ä–æ-–∫—Ä–µ–¥–∏—Ç–æ–≤`, "lose");
                }
                gamesPlayed++;
                updateDisplay();
            }, 2000);
        }

        function getAIPrediction() {
            const predictions = [
                "üîÆ –ò–ò –≤–∏–¥–∏—Ç: –ó–∞–≤—Ç—Ä–∞ –≤–∞—Å –∂–¥–µ—Ç –Ω–µ–æ–∂–∏–¥–∞–Ω–Ω–∞—è –ø—Ä–∏–±—ã–ª—å!",
                "üåå –ö–æ—Å–º–∏—á–µ—Å–∫–∏–µ —Å–∏–ª—ã —Å–µ–≥–æ–¥–Ω—è –Ω–∞ –≤–∞—à–µ–π —Å—Ç–æ—Ä–æ–Ω–µ!",
                "‚ö° –ê–ª–≥–æ—Ä–∏—Ç–º—ã —Å–æ–≤–µ—Ç—É—é—Ç –æ—Å—Ç–æ—Ä–æ–∂–Ω–æ—Å—Ç—å - –º–∞–≥–Ω–∏—Ç–Ω—ã–µ –±—É—Ä–∏!",
                "üéØ –í–∞—à–∞ –∞—É—Ä–∞ –∏–¥–µ–∞–ª—å–Ω–æ —Å–æ–≤–ø–∞–¥–∞–µ—Ç —Å –Ω–µ–π—Ä–æ-—Å–ª–æ—Ç–∞–º–∏!",
                "üí´ –ö–≤–∞–Ω—Ç–æ–≤—ã–µ —á–∞—Å—Ç–∏—Ü—ã —à–µ–ø—á—É—Ç: –ø–æ–ø—Ä–æ–±—É–π—Ç–µ —á–∏—Å–ª–æ 7!",
                "üö´ –ò–∑–±–µ–≥–∞–π—Ç–µ —Å—Ç–∞–≤–æ–∫ —Å–µ–≥–æ–¥–Ω—è –ø–æ—Å–ª–µ 18:00!"
            ];
            showMessage(predictions[Math.floor(Math.random() * predictions.length)], "info");
        }

        // –ó–∞–ø—É—Å–∫ –∏–≥—Ä—ã
        init();
    </script>
